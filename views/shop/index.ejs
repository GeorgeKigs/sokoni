<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/user-nav.ejs') %>
    <%- include('../includes/prompt_admin.ejs') %>
<%- include('../includes/categories.ejs',{path:'category'}) %>
    
    <% if (productsData) { %>
    
    <div class="container grid">
        <div class="grid">
            <% for (let product of productsData.products) { %>
            <article class="card product-item">
                <div class="card__image">
                    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
                </div>
                <div class="card__content">
                    <header class="card__header">
                        <h1 class="product__title"><%= product.title %></h1>
                    </header>
                    <h2 class="product__price">Ksh <%= product.sellingPrice %></h2>
                    <p class="product__description"> <%= product.description %></p>
                </div>
                <div class="card__actions">
                    <a href="/product/<%= product._id %>" class="btn">Details</a>
                    <%- include('../includes/add-to-cart.ejs',{product}) %>
                </div>
            </article>
            <% } %>
        </div>
    </div>
        
    <%- include('../includes/pagination.ejs') %>
    <% } else { %>
    <h1>No Products Found!</h1>
    <% } %>
    </main>

    <%- include('../includes/end.ejs') %>