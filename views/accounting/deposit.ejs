<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/auth.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="grid">
        <article class="card">
            <form class="login-form" action="<%= postPath%>" method="POST" novalidate>
                <div class="form-control">
                    <label for="payment"> Payment Options </label>
                    <input type="select" name="paymentMethod" value="<%= previousData.paymentMethod%>" />
                </div>
                <div class="form-control">
                    <label for="amount"> Amount</label>
                    <input type="number" name="amount" placeholder=" amount" value="<%= previousData.amount%>" />
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input class="btn" type="submit" value="Deposit the Amount">
            </form>
        </article>
    </div>
    </main>
    <%- include('../includes/end.ejs') %>