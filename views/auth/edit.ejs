<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/forms.css">
<link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <div class="grid">
        <article class="card">
            <form class="product-form" action="/<%= postPath %>" method="POST" enctype="multipart/form-data">
                <div class="form-control">
                    <label for="title">Name</label>
                    <input type="text" name="name" id="name" value="<%= previousData.name %>">
                </div>
                <div class=" form-control">
                    <label for="title">Email</label>
                    <input type="email" name="email" id="title" value="<%= previousData.email %>">
                </div>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input class="btn" type="submit" value="Change Details">
            </form>
        </article>
    </div>
    </main>
    <%- include('../includes/end.ejs') %>